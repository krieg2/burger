
<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <img id="logo" src="/assets/img/hamburger-food-meal-tasty-47725.jpeg">
      <h1>Eat-A-Burger!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-3 text-center">
      <ol id="uneaten">
        {{#each burgers}}
          {{#unless devoured}}
            <li class="mb-3">
              {{burger_name}}
            </li>
          {{/unless}}
        {{/each}}
      </ol>
    </div>
    <div class="col-2">
      <ol id="buttons">
      {{#each burgers}}
        {{#unless devoured}}
        <li>
          <button type="button" class="btn btn-light btn-sm eat" data-id="{{id}}">Devour it!</button>
        </li>
        {{/unless}}
      {{/each}}
      </ol>
    </div>
    <div class="col-3">
      <ol id="eaten">
        {{#each burgers}}
          {{#if devoured}}
            <li class="mb-3">
              {{burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <form class="create-form">
        <div class="form-group">
          <textarea cols="50" type="text" id="name" name="name" placeholder="Burger description..."></textarea>
        </div>
        <button class="btn btn-secondary btn-md mx-auto" type="submit">Submit</button>
        <p class="mt-2">Enter a burger you want to eat and click the "Submit" button.</p>
      </form>
    </div>
  </div>
</div>
