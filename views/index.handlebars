<h1>Eat-Da-Burger!</h1>

<div>
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger eaten=true}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div>
  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger eaten=false}}
      {{/if}}
    {{/each}}
  </ul>
</div>

<form class="create-form">
  <div class="form-group">
    <input type="text" id="name" name="name">
  </div>
  <button type="submit">Submit</button>
  <label>Enter a burger you want to eat and click the "Submit" button.</label>
</form>
