
<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <img id="logo" src="/assets/img/hamburger-food-meal-tasty-47725.jpeg">
      <h1>Eat-A-Burger!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <ol>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger}}
          {{/unless}}
        {{/each}}
      </ol>
    </div>
    <div class="col-6">
      <ol>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger}}
          {{/if}}
        {{/each}}
      </ol>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <form class="create-form">
        <div class="form-group">
          <textarea cols="50" type="text" id="name" name="name" placeholder="Burger description..."></textarea>
        </div>
        <button class="btn btn-secondary btn-md mx-auto" type="submit">Submit</button>
        <p class="mt-2">Enter a burger you want to eat and click the "Submit" button.</p>
      </form>
    </div>
  </div>
</div>
